<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dantecMarket.Vues.VueLogin"
             BackgroundColor="#1F1F1F">

    <AbsoluteLayout>

        <!-- Banderole en arrière-plan -->
        <Image Source="banderole.jpg"
               Aspect="AspectFill"
               AbsoluteLayout.LayoutBounds="0,0,1,1"
               AbsoluteLayout.LayoutFlags="All"
               Opacity="0.3" />

        <!-- Contenu de la page -->
        <StackLayout Padding="30"
                     AbsoluteLayout.LayoutBounds="0.5,0.5,0.9,0.8"
                     AbsoluteLayout.LayoutFlags="All"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Spacing="25">
            <!-- Augmenter l'espace entre les éléments -->

            <!-- Logo -->
            <Frame HeightRequest="140"
                   WidthRequest="140"
                   CornerRadius="70"
                   IsClippedToBounds="True"
                   Padding="0"
                   BackgroundColor="Transparent"
                   BorderColor="White"
                   HorizontalOptions="Center">
                <Image Source="logo.jpg"
                       Aspect="AspectFill" />
            </Frame>

            <!-- Titre -->
            <Label Text="Connexion"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,10,0,10"/>

            <!-- Email -->
            <Frame BackgroundColor="#292929"
                   CornerRadius="10"
                   Padding="5"
                   Margin="0,5,0,0"
                   HeightRequest="60">
                <!-- Augmenter la taille de la zone de texte -->
                <Entry x:Name="EmailEntry"
                       Placeholder="Email"
                       BackgroundColor="Transparent"
                       FontSize="18"
                       PlaceholderColor="LightGray"
                       TextColor="White"/>
            </Frame>

            <!-- Mot de passe -->
            <Frame BackgroundColor="#292929"
                   CornerRadius="10"
                   Padding="5"
                   Margin="0,5,0,10"
                   HeightRequest="60">
                <!-- Augmenter la taille de la zone de texte -->
                <Entry x:Name="PasswordEntry"
                       Placeholder="Mot de passe"
                       IsPassword="True"
                       BackgroundColor="Transparent"
                       FontSize="18"
                       PlaceholderColor="LightGray"
                       TextColor="White"/>
            </Frame>

            <!-- Bouton de connexion -->
            <Button Text="Se connecter"
                    Clicked="OnLoginButtonClicked"
                    BackgroundColor="#F5A623"
                    TextColor="Black"
                    HeightRequest="50"
                    FontSize="18"
                    CornerRadius="12"
                    FontAttributes="Bold"
                    HorizontalOptions="Fill"
                    Margin="0,10,0,0"/>

            <!-- Loader -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsRunning="False"
                               IsVisible="False"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
        </StackLayout>

    </AbsoluteLayout>
</ContentPage>
