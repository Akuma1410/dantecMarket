<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dantecMarket.Vues.VueLogin"
             BackgroundColor="White">

    <AbsoluteLayout>
        <!-- Banderole en arriÃ¨re-plan -->
        <Image Source="banderole.png" Aspect="AspectFill"
               AbsoluteLayout.LayoutBounds="0,0,1,1"
               AbsoluteLayout.LayoutFlags="All" />

        <!-- Contenu de la page -->
        <StackLayout Padding="30" AbsoluteLayout.LayoutBounds="0.5,0.5,0.8,0.8" AbsoluteLayout.LayoutFlags="All">
            <Frame HeightRequest="150"
                   WidthRequest="150"
                   CornerRadius="75"
                   IsClippedToBounds="True"
                   Padding="0"
                   BackgroundColor="Transparent"
                   BorderColor="White"
                   Margin="0,20,0,0"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <Image Source="logo.png"
                       Aspect="AspectFill">
                    <Image.Shadow>
                        <Shadow Brush="#40000000"
                               Offset="0,4"
                               Radius="12"/>
                    </Image.Shadow>
                </Image>
            </Frame>

            <Label Text="Connexion" FontSize="32" HorizontalOptions="Center" />

            <Entry x:Name="EmailEntry" Placeholder="Email" 
                   BackgroundColor="#f0f0f0" 
                   HeightRequest="50" 
                   Margin="0,10,0,0" 
                   FontSize="18" 
                   PlaceholderColor="Gray" 
                   TextColor="Black" />

            <Entry x:Name="PasswordEntry" Placeholder="Mot de passe" IsPassword="True" 
                   BackgroundColor="#f0f0f0" 
                   HeightRequest="50" 
                   Margin="0,10,0,0" 
                   FontSize="18" 
                   PlaceholderColor="Gray" 
                   TextColor="Black" />

            <Button Text="Se connecter" Clicked="OnLoginButtonClicked" 
                    BackgroundColor="#007AFF" 
                    TextColor="White" 
                    HeightRequest="50" 
                    FontSize="18" 
                    CornerRadius="10" 
                    Margin="0,20,0,0" />

            <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" HorizontalOptions="Center" VerticalOptions="Center" />
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>
